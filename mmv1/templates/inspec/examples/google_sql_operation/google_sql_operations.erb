<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% gcp_db_instance_name = "#{external_attribute(pwd, 'gcp_db_instance_name', doc_generation)}" -%>
<% sql_operation = grab_attributes(pwd)['sql_operation'] -%>

describe google_sql_operations(project: <%= gcp_project_id -%>, instance: <%= gcp_db_instance_name -%>) do
  it { should exist }
  its('names') { should include <%= doc_generation ? "'#{sql_operation['name']}'" : "sql_operation['name']" -%> }
  its('statuses') { should include <%= doc_generation ? "'#{sql_operation['status']}'" : "sql_operation['status']" -%> }
  its('operation_types') { should include <%= doc_generation ? "'#{sql_operation['operation_type']}'" : "sql_operation['operation_type']" -%> }
end