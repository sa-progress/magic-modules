<% gcp_project_id = "#{external_attribute(pwd, 'gcp_project_id', doc_generation)}" -%>
<% gcp_db_instance_name = "#{external_attribute(pwd, 'gcp_db_instance_name', doc_generation)}" -%>
<% gcp_db_name = "#{external_attribute(pwd, 'gcp_db_name', doc_generation)}" -%>
describe google_sql_database(project: <%= gcp_project_id -%>, instance: <%= gcp_db_instance_name -%>, gcp_db_name: <%= gcp_db_name -%>) do
  it { should exist }
  its('name') { should eq <%= gcp_db_name -%> }
  its('instance') { should eq <%= gcp_db_instance_name -%> }
end